<% layout('layouts/boilerplate') %>
<div class="d-flex justify-content-between p-4 align-items-center">
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new" class="btn btn-primary">Add Campground</a>
    </div>
</div>


<% for( let campground of campgrounds ) { %>
    
<div class="card mb-3" >
    <div class="row">
        <div class="col-md-4">
            <img src="<%=campground.images[0].url%>" class="card-img-top h-100 fit" alt="campground image">
        </div>
        
        <div class="card-body col-md-8">
            <h5 class="card-title"><%= campground.title %> Campground</h5>
            <p class="card-text"><%= campground.description %></p>
            <p ><%= campground.location %></p>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Details</a>
        </div>
    </div>
</div>

<% } %>
